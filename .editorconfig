root = true

[*]
indent_style             = space
indent_size              = 4
charset                  = utf-8
end_of_line              = lf
max_line_length          = 120
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{ui,xml,xml.in,xml.in.in,doap}]
indent_size = 2

[*.css]
indent_size = 2

[*.{yaml,yml,json}]
indent_size = 2

[*.md]
max_line_length = 80
